<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightestgray"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context="DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:background="@drawable/bg_hi"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:text="Hi! User"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:text="Teamwork makes a dreamwork"
        android:textColor="#868282"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:background="@drawable/square_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:lines="2"
            android:text="Booking \nthis is for booking room"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:text="this is for booking"
            android:textColor="#868282" />

        <Button
            android:id="@+id/btn_bkNow"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="115dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_bg"
            android:text="Booking now"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/square_button"
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_marginTop="390dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:text="Booking booking booking \nthis is for booking room"
            android:lines="2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="this is for booking"
            android:textColor="#868282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/btn_room"
            android:text="Room List"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_bg"
            android:layout_marginTop="115dp"
            android:layout_marginRight="15dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

    </RelativeLayout>
</FrameLayout>